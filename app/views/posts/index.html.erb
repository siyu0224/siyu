<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div class="glyphicon glyphicon-star-empty favorite"></div>
        </td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <!--<td><%= post.category_id %></td>-->
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-default navbar-btn' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-default navbar-btn' %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: "Don't destroy that!" }, class: 'btn btn-danger navbar-btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, :class => "btn btn-primary" %>

<script>
  $(".favorite").click(handleFavoriteClicked);
  
  function handleFavoriteClicked(){
    $(this).removeClass("glyphicon-star-empty");
    $(this).addClass("glyphicon-star");
  }
</script>