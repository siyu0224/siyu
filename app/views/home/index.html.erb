      </div>
    </footer>
    
       <script>
      var title = $('.title-1');
      title.text("Hi, I'm Siyu Liu");
      title.css({color: "white", fontSize: "60px"});
      
      function changeTitleColor(){
        var randomColor = getRandomColor();
        title.css({color: randomColor});
      }
      
      function getRandomColor(){
        return "#000000".replace(/0/g,function(){return (~~(Math.random()*16)).toString(16);});
      }
      
      title.hover(changeTitleColor);
      
   $.ajax({
          url: 'api/v1/weather',
          type: 'GET',
          // data: { lat: lat, lon: lon},
          contentType: 'application/json; charset=utf-8',
          success: function (response) {
            var summary = response["currently"]["summary"];
            var temp = response.currently.temperature;
            var subTitle = $('.title-2');
            subTitle.text("It is " + temp + " degrees and " + summary.toLowerCase() + ".");
          },
          error: function () {
            console.log(response);
          }
      });
      
    </script>
    
    </body>
</html>